<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_item_height"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/card_item_marginRight"
        android:layout_marginLeft="@dimen/card_item_marginLeft"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/card_item_height"
            android:layout_height="@dimen/card_item_height" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/title_textview"
                    android:layout_width="0dp"
                    android:textColor="#2E7D32"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_weight="4"
                    android:text="Simple Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="#2E7D32"
                    android:id="@+id/like_textview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/card_item_title_margin"
                    android:layout_weight="2"
                    android:text="0 likes"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/like_button"
                    android:layout_width="@dimen/card_item_favorite_size"
                    android:layout_height="@dimen/card_item_favorite_size"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_done_black_24dp" />
            </LinearLayout>

            <TextView
                android:textColor="#2E7D32"
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="sample content"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>